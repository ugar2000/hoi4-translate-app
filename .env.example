# Global environment variables for Paradox Game Translation App

# Database
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=translator
POSTGRES_PORT=5432
DATABASE_URL=postgresql://user:password@localhost:5432/translator

# Authentication
JWT_SECRET=your-jwt-secret-change-in-production
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production
NEXTAUTH_URL=http://localhost:3000

# Microsoft Translator API
MICROSOFT_TRANSLATOR_KEY=your-microsoft-translator-key
MICROSOFT_TRANSLATOR_REGION=your-region

# OpenAI API (if used)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Object storage (MinIO)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=translations
MINIO_REGION=us-east-1
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Frontend configuration
# Used by Next.js API routes and optional client-side features
NEXT_PUBLIC_API_URL=http://localhost:3005/api
NEXT_PUBLIC_API_WS_URL=http://localhost:3005
# Service ports
API_SERVICE_PORT=3005
TRANSLATION_SERVICE_PORT=4001
DEEPL_SERVICE_PORT=3004
VARIABLE_SEPARATOR_PORT=3003
WEBSOCKET_SERVICE_PORT=3001
