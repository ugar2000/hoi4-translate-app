# Global environment variables for Paradox Game Translation App

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/translator

# Authentication
JWT_SECRET=your-jwt-secret-change-in-production
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production
NEXTAUTH_URL=http://localhost:3000

# Microsoft Translator API
MICROSOFT_TRANSLATOR_KEY=your-microsoft-translator-key
MICROSOFT_TRANSLATOR_REGION=your-region

# OpenAI API (if used)
OPENAI_API_KEY=your-openai-api-key

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Service URLs used by WebSocket service
TRANSLATION_SERVICE_URL=http://localhost:3002
VARIABLE_SEPARATOR_URL=http://localhost:3003
MICROSOFT_TRANSLATOR_SERVICE_URL=http://localhost:3004

# Frontend configuration
# Used by Next.js API routes and optional client-side features
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3001
